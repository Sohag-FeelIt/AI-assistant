{
  "name": "stealth-ai-assistant",
  "version": "1.0.0",
  "description": "A stealth AI assistant app for professionals, students, and everyday users",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "nodemon --exec electron . --watch src/main",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "electron-builder",
    "test": "jest"
  },
  "keywords": ["ai", "assistant", "stealth", "automation", "electron"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@google/generative-ai": "^0.2.0",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "node-speech-to-text": "^0.1.0",
    "openai": "^4.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.0",
    "socket.io": "^4.7.0",
    "speech-to-text": "^0.7.0",
    "styled-components": "^6.1.0",
    "uuid": "^9.0.0",
    "web-speech-api": "^0.0.1"
  },
  "build": {
    "appId": "com.stealthai.assistant",
    "productName": "Stealth AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "dist/renderer/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}